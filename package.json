{
  "name": "swap-bot",
  "version": "1.0.0",
  "description": "Klaytn Token auto swap bot",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "big.js": "^6.1.1",
    "caver-js": "^1.8.1",
    "caver-multicall": "^1.0.5"
  },
  "scripts": {
    "swap:dev": "sls invoke local -s dev -f swap",
    "swap:prod": "sls invoke local -s prod -f swap",
    "predeploy:dev": "cross-env STAGE=dev node ./src/updatePools",
    "predeploy:prod": "cross-env STAGE=prod node ./src/updatePools",
    "deploy:dev": "sls deploy -s dev",
    "deploy:prod": "sls deploy -s prod",
    "singleSwap:dev": "sls invoke local -s dev -f singleSwap --param=\"from=$from\" --param=\"to=$to\" --param=\"amount=$amount\"",
    "singleSwap:prod": "sls invoke local -s prod -f singleSwap --param=\"from=$from\" --param=\"to=$to\" --param=\"amount=$amount\""
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
